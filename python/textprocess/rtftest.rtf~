        \footnote{14c <LEM>brāhmaṇo</LEM> \msCa\Ed; brahmaṇo \msCb\oo

                 <LEM>tathaiveha</LEM> \msCb\Ed; ta\uncl{the}veha \msCa}

\par anyonyadṛṣṭisaṃsaktau jātau tau tu parasparam|

        \footnote{15a <LEM>°saṃsaktau</LEM> \msCc\Ed; °saṃśaktau \msCa, °śaktau \msCb}

\par vipulenāñjaliṃ kṛtvā brāhmaṇa saṃśitavrata||12.15||

        \footnote{15d <LEM>brāhmaṇa</LEM> \msCb; brāhmaṇaḥ \msCa\Ed\oo 

                 <LEM>°śita°</LEM> \eme; °śrita° \msCa\msCb\Ed\oo

                 <LEM>°vrata</LEM> \conj; °vra* \msCa, °vrataḥ \msCb\Ed}

        \footnote{15d Ł = MBh 12.213.18d and 12.347.1d $</PARAL>

\par ājñāpaya dvijaśreṣṭha adya me 'nugrahaṃ kuru|

        \footnote{16b <LEM>°grahaṃ</LEM> \msCa\Ed; °graha \msCb}

\par bhāryābhṛtyapaśugrāma ratnāni vividhāni ca||12.16||

\par vipulenaivam uktas tu gṛhīto brāhmaṇo 'bravīt|

\par yadi satyaṃ pradātāsi suprasannaṃ manas tava||12.17||

        \footnote{17f <LEM>°sannaṃ</LEM> \msCa\msCb; °sanna° \Ed}

\par vipula uvāca| 

\par suprasannaṃ mano me 'dya suprasannaṃ tapaḥphalam|

\par śīghram ājñāpaya vipra yac cābhilaṣitaṃ tava|

\par adeyaṃ nāsti viprasya svaśiraḥprabhṛti dvija||

        \footnote{18f <LEM>°bhṛti</LEM> \msCa\msCb; °bhṛtir \Ed}

\par brāhmaṇa uvāca| 

        \footnote{19 <LEM>brāhmaṇa</LEM> \msCapcorr\Ed; brāhmaṇā \msCaacorr}

\par yady evaṃ vadase bhadra bhāryāṃ me dehi rūpiṇīm|

\par svasti bhavatu bhadraṃ vaḥ kalyāṇaṃ bhava śāśvatam||12.19||

        \footnote{19c <LEM>svasti</LEM> \msCa\msCb; svastir \Ed}

        \footnote{19d <LEM>bhava</LEM> \msCa\msCb; tava \Ed}

\par vipula uvāca|  

        \footnote{20 <LEM>vipula</LEM> \msCa; vipra \Ed}

\par pratīccha bhāryāṃ suśroṇīṃ rūpayauvanaśālinīm|

\par akutsitāṃ viśālākṣīṃ pūrṇacandranibhānanām||12.20||

\par bhāryovāca|

\par parityājyā kathaṃ nātha apāpāṃ tyajase katham|

        \footnote{21a <LEM>°tyājyā</LEM> \msCa\Ed; °tyājya \msCb}

\par atīva hi priyāṃ bhāryāṃ nirdoṣāṃ sa kathaṃ tyajeḥ||

        \footnote{21d <LEM>tyajeḥ</LEM> \msCa; tyajet \Ed}

\par sakhā bhāryā manuṣyāṇām iha loke paratra ca|

\par dānaṃ vā sumahad dattvā yajño vā subahuḥ kṛtaḥ||12.22||

        \footnote{22d <LEM>°bahuḥ</LEM> \eme; °bahu \msCa\msCb\ \unmetr; °bahūn \Ed}

\par aputro nāpnuyāt svargaṃ tapobhir vā suduṣkaraiḥ|

        \footnote{23ab <LEM>svargaṃ tapobhir vā</LEM> \Ed; sva\uncl{rggan} ×××r vvā \msCa}

\par śruto me pitṛbhiḥ prokto brāhmaṇaiś ca mamāntike||12.23||

        \footnote{23d <LEM>°ntike</LEM> \msCa\Ed; °ntikaiḥ \msCb}

\par aputro nāpnuyāt svargaṃ śrutaṃ me bahuśaḥ purā|

        \footnote{24a <LEM>svargaṃ</LEM> \msCa\Ed; svarga \msCb}

\par mandapālo dvijaśreṣṭho gataḥ svargaṃ tapobalāt||12.24||

        \footnote{24c <LEM>°pālo</LEM> \Ed; °pāla \msCa\msCb}

        \footnote{24c ŁSee Mandapāla's story in MBh 1.220.5ff.$</PARAL>

\par dānāni ca bahūn dattvā yajñāṃś ca vividhāṃs tathā|

        \footnote{25b <LEM>yajñāṃś ca vividhāṃs</LEM> \msCa; yatvā yajñāṃś ca vividhāṃ \msCb, syajñāś ca vividhās \Ed}

\par vedāṃś ca japa yajñāṃś ca kṛtvā tad dvijasattamaḥ||12.25||

        \footnote{25c <LEM>vedāṃś ca japayajñāṃś ca</LEM> \msCa; vedāś ca japayajñāṃś ca \msCb,

                                                 vedāś ca japayajñāś ca \Ed}

\par prāptadvāro 'pi yasyāpi devadūtair nivāritaḥ|

        \footnote{26a <LEM>yasyāpi</LEM> \msCa\msCb; yasyāhi \Ed}

\par aputro nāpnuyāt svargaṃ yadi yajñaśatair api||12.26||

\par ity uktas tu cyutaḥ svargān mandapālo mahān ṛṣiḥ|

\par putrān utpādayām āsa śāraṅgāś caturo dvijaḥ||12.27||

        \footnote{27d <LEM>śāraṅgāś ca</LEM> \msCa; śāraṅgaṃś ca \msCb, śāraṅgāc ca \Ed}

\par tena puṇyaprabhāveṇa svargaṃ prāpto hy avāritaḥ|

\par kulatrāṇāṃ kalatrāsmi bharaṇād bhārya eva ca||12.28||

        \footnote{28c <LEM>kula°</LEM> \msCb; kala° \msCa\Ed\

             28d <LEM>bhārya eva</LEM> \msCa\Ed; bhāryam eva \msCb}

\par dārasaṃgraha putrārthe kriyate śāstradarśanāt|

        \footnote{29a <LEM>°graha</LEM> \Ed; °grahaḥ \msCa\msCb\oo

                 <LEM>putrā°</LEM> \msCa\msCb; pātrā° \Ed\

             29b <LEM>kriyate</LEM> \msCa\Ed; kriyāte \msCb}

\par yāni santi gṛhe dravyaṃ grāmaghoṣagṛhāṇi ca||12.29||

\par dātum arhasi viprāya na māṃ dātum ihārhasi|

\par bhāryāyā vacanaṃ śrutvā vipulaḥ punar abravīt||12.30||

\par vipula uvāca| 

        \footnote{31 <LEM>vipula uvāca</LEM> \Ed; \om\ \msCa\msCb}

\par sādhu bhāmini jānāmi sādhu sādhu pativrate|

        \footnote{31a <LEM>jānāmi</LEM> \msCb\Ed; jānāsi \msCa}

\par jito 'smy anena vākyena anenāsmi hi toṣitaḥ||12.31||

\par adya grahaṇakāle ca dvija āgatya yācate|

\par dadāmīti pratijñāya adattvā narakaṃ vraje||12.32||

        \footnote{32d <LEM>vraje</LEM> \msCa; vrajet \msCb\Ed}

\par narakaṃ yadi gacchāmi kulena saha sundari|

\par kalpakoṭisahasre 'pi narakasthād yaśasvini||12.33||

        \footnote{33c <LEM>°sahasre 'pi</LEM> \msCa\msCb; °sahasrāṇi \Ed}

        \footnote{33d <LEM>°sthād</LEM> \msCa; sthā \msCb, °stho \Ed}

\par muktim eva na paśyāmi janmakoṭiśatair api|

        \footnote{34a <LEM>muktim eva</LEM> \msCa; muktim evan \Ed}

\par adānāc cāśubhaṃ devi paśyāmi varavarṇini||12.34||

\par dānena tu śubhaṃ paśye svargaloke yad akṣayam|

        \footnote{35b <LEM>°loke</LEM> \msCa; °lokaṃ \Ed}

\par noktaṃ mayānṛtaṃ pūrvaṃ nityaṃ satyavrate sthitaḥ||12.35||

        \footnote{35d <LEM>°vrate</LEM> \msCa\msCb; °vrata° \Ed}

\par satyadharmam atikramya nānyadharmaṃ samācare|

        \footnote{36b <LEM>°care</LEM> \msCa\msCb; °caret \Ed}

\par bhāryā dharmasakhety evaṃ tvayi pūrvam udāhṛtam||12.36||

\par yadi dharmasakhāyāsi so 'dya kāla ihāgataḥ|

        \footnote{37a <LEM>°sakhāyā°</LEM> \msCa\Ed; °sakhā° \msCb}

\par dvijarūpadharo dharmaḥ svayam eva ihāgataḥ||12.37||

        \footnote{37c <LEM>°dharo</LEM> \msCa\Ed; °paro \msCb}

\par jijñāsārtham ahaṃ bhadre na vighnaṃ kartum arhasi|

\par mātāvyaktaḥ pitā brahmā buddhir bhāryā damaḥ sakhā||12.38||

        \footnote{38d <LEM>buddhir</LEM> \msCa\msCb; buddhi \Ed\oo

                 <LEM>sakhā</LEM> \msCb\Ed; samā \msCa}

\par putro dharmaḥ kriyācārya ity ete mama bāndhavāḥ|

\par kālaśreṣṭho grahaḥ sūryo gaṅgā śreṣṭhā nadīṣu ca||12.39||

        \footnote{39c <LEM>°śreṣtho</LEM> \msCb; °śreṣṭha° \msCa, °śreṣṭhaḥ \Ed}

        \footnote{39d Ł\kb\ 15.18b: $ śreṣṭhā gaṅgā nadīṣu ca</PARAL>

\par candrakṣaye dinaṃ śreṣṭhaṃ naraśreṣṭho dvijottamaḥ|

        \footnote{40a <LEM>dinaṃ</LEM> \msCa\msCb; dina° \Ed}

\par śuśrūṣaṇārthaṃ viprasya mayā dattāsi sundari|

        \footnote{40a <LEM>°rthaṃ</LEM> \msCa\Ed; °rtha \msCb\

             40b <LEM>dattāsi</LEM> \msCa\msCb; dattāni \Ed}

\par sarvasvaṃ brāhmaṇe dattvā vanam evāśrayāmy aham||

\par śaṅkara uvāca| 

        \footnote{41 <LEM>śaṅkara</LEM> \msCa\msCb; maheśvara \Ed}

\par tūṣṇīmbhūtā tato bhāryā aśrupūrṇākulekṣaṇā|

        \footnote{41a <LEM>tūṣṇīmbhūtā</LEM> \msCa; tūṣṇībhūtvā \msCb, tūṣṇībhūtāṃ \Ed\oo

                 <LEM>bhāryā</LEM> \msCa\msCb; bhāryāṃ \Ed}

        \footnote{41b <LEM>°kṣaṇā</LEM> \msCa; °kṣaṇām \Ed}

\par kare gṛhya viśālākṣī brāhmaṇāya niveditā||12.41||

        \footnote{41c <LEM>°kṣī</LEM> \msCa\msCb; °kṣīṃ \Ed\

             41d <LEM>brāhmaṇāya niveditā</LEM> \msCa\Ed; brāhmaya diveditā \msCb}

\par yāni santi gṛhe dravyaṃ hiraṇyaṃ paśavas tathā|

        \footnote{42b <LEM>hiraṇyaṃ</LEM> \msCa\msCb; hiraṇya° \Ed}

\par dadāmi te dvijaśreṣṭha grāmaghoṣagṛhādikam||12.42||

        \footnote{42c <LEM>dadāmi</LEM> \msCa\Ed; dadāni \msCb\

                 <LEM>te dvija°</LEM> \msCb\Ed; ××ja° \msCa}

\par muktā vaiḍūryavāsāṃsi divyāṇy ābharaṇāni ca|

\par sarvān gṛhāṇa viprendra śraddhayā dattasatkṛtām||12.43||

\par prīyatāṃ bhagavān dharmaḥ prīyatāṃ ca maheśvaraḥ|

\par prīyantāṃ pitaraḥ sarve yady asti sukṛtaṃ phalam||12.44||

        \footnote{44c <LEM>prīyantāṃ</LEM> \msCa; prīyatāṃ \msCb\Ed}

        \footnote{44d <LEM>asti</LEM> \msCb\Ed; asi \msCa}

\par rudra uvāca| 

        \footnote{45 <LEM>rudra</LEM> \msCa\msCb; maheśvara \Ed}

\par vipulasya vacaḥ śrutvā brāhmaṇena tapasvinā|

        \footnote{45a <LEM>vacaḥ śrutvā</LEM> \msCb\Ed; vaca\uncl{ś śru}× \msCa}

\par āśīḥ suvipulaṃ dattvā vipulāya mahātmane||12.45||

\par vaset tatra gṛhe ramye bhāryām ādāya tasya ca|

        \footnote{46a <LEM>vaset tatra gṛhe</LEM> \msCb\msNa; vasa tatra gṛhe \msCa, vasate ca gṛhaṃ \Ed}

\par vipulas tu namaskṛtvā kṛtvā cāpi pradakṣiṇam||12.46||

        \footnote{46d <LEM>cāpi</LEM> \msCa\msCb; ca vi° \Ed}

\par brāhmaṇam abhivādyaivaṃ gataḥ śīghraṃ vanāntaram|

        \footnote{47a <LEM>°dyaivaṃ</LEM> \eme; °dyevaṃ \msCa\Ed, °dyenaṃ \msCb}

\par vane mūlaphalāhāro vicareta mahītale||12.47||

\par ekākī vijane śūnye cintayā ca pariplutaḥ|

        \footnote{48a <LEM>ekākī</LEM> \msCb\Ed; e\uncl{kā}× \msCa}

\par kva gacchāmi kva bhokṣyāmi kutra vā kiṃ karomy aham||12.48||

        \footnote{48c <LEM>kva bhokṣyāmi</LEM> \msCa; kva bhojyāmi \msCb, kiṃ bhokṣyāmi \Ed\ \unmetr}

\par na pathaṃ viṣayaṃ vedmi grāmaṃ vā nagarāṇi vā|

\par kheṭakharvaṭadeśaṃ vā jānāmīha na kaṃcana||12.49||

        \footnote{49c <LEM>°kharvaṭa°</LEM> \Ed; °karppaṭa° \msCa\msCb}

        \footnote{49d <LEM>kaṃcana</LEM> \eme; kaścana \msCa\msCb\Ed}

\par amuṃ suśailaṃ paśyāmi vipulodarakandaram|

\par tam āruhya nirīkṣyāmi grāmaṃ nagarapattanam||12.50||

\par evam uktvā tu vipulaḥ śanaiḥ parvatam āruhat|

        \footnote{51a <LEM>evam u°</LEM> \msCa\Ed; ekaṃ u° \msCb\

             51b <LEM>°ruhat</LEM> \Ed; °ruhet \msCa\msCb}

\par vṛkṣacchāyāṃ samālokya niṣasāda śramānvitaḥ||12.51||

\par etasminn eva kāle tu vṛkṣaśākhāvatārya ca|

        \footnote{52a <LEM>kāle tu</LEM> \msCa\msCb; kālena \Ed}

\par apūrvaṃ ca surūpaṃ ca sugandhatvaṃ ca śobhanam||12.52||

        \footnote{52c <LEM>surūpaṃ</LEM> \msCa\Ed; svarūpaṃ \msCb}

\par phalaṃ gṛhya vicitraṃ ca hṛdayānandanaṃ śubham|

\par vipulasyāgrataḥ kṛtvā punar vṛkṣaṃ samāruhat||12.53||

\par vipulaś citravad dṛṣṭvā vismayaṃ paramaṃ gataḥ|

\par aho vā svapnabhūto 'smi aho vā tapasaḥ phalam||12.54||

\par na paśyāmi na jighrāmi na ca svādaṃ ca vedmy aham|

        \footnote{55a <LEM>jighrāmi</LEM> \msCa\Ed; ca ghrāmi \msCb}

\par vārtāpi na ca me śrotrā pratijānāmi kaṃcana||12.55||

        \footnote{55c <LEM>śrotrā</LEM> \msCa; śrotā \msCb\Ed}

        \footnote{55d <LEM>kaṃcana</LEM> \eme; kaścana \msCa\msCb\Ed}

\par evam uktvā hy anekāni phalaṃ gṛhya manoramam|

\par sunirīkṣya punar jighraṃ punar jighraṃ nirīkṣya ca||12.56||

\par phalaṃ cātra nirūpyanto deśaṃ vāpy avalokayan|

        \footnote{57a <LEM>cātra</LEM> \msCb\Ed; cā \msCaacorr, cā\uncl{tra} \msCapcorr\oo

                 <LEM>nirūpyanto</LEM> \Ed; nirūpyānti \msCa, nirūpyāṃ cā\

             57b <LEM>°lokayan</LEM> \msCa\Ed; °lokayat \msCb}

\par pātheyarahitaś cāsmi devadattaṃ phalaṃ mama||12.57||

        \footnote{57d <LEM>°dattaṃ</LEM> \msCa; °datta° \msCb\Ed}

\par tatphalaṃ pratigṛhyaiva nagaraṃ praviśāmy aham|

        \footnote{58a <LEM>°gṛhyaiva</LEM> \msCb\Ed; °gṛhyeva \msCa}

\par prārthayitvā ca yat kiṃcij jīvanārthaṃ carāmy aham||12.58||

\par tataḥ śailam atikramya nagaraṃ praviveśa ha|

\par pathi kaścij janaḥ pṛṣṭhaḥ kiṃnāma nagaraṃ tv idam||12.59||

        \footnote{59d <LEM>nagaraṃ</LEM> \msCa\Ed; nagara \msCb}

\par sa hovāca pathī kena kim apūrvam ihāgataḥ|

        \footnote{60a <LEM>sa ho°</LEM> \msCa\Ed; aho° \msCb}

\par dakṣiṇāpathadeśo 'yaṃ naravīrapuraṃ tv adaḥ||12.60||

        \footnote{60c <LEM>°patha°</LEM> \msCa\Ed; °pathe \msCb\

             60d <LEM>tv adaḥ</LEM>\msCb; tvayaḥ \msCa, svayam \Ed}

\par rājā siṃhajaṭo nāma rājñī tasya ca kekayī|

        \footnote{61a <LEM>rājā</LEM> \msCa\msCb; rāja \Ed\oo

                 <LEM>°jaṭo</LEM> \msCa\msCb; °yato \Ed}

        \footnote{61b <LEM>kekayī</LEM> \msCb\Ed; kaikayī \msCa}

\par ativṛddho jarāgrastaḥ kekayī ca tathaiva ca||12.61||

        \footnote{61d <LEM>kekayī</LEM> \msCb\Ed; kaikayī \msCa}

\par dātā sarvakalājñaś ca yuddhe vīryabalānvitaḥ|

        \footnote{62a <LEM>dātā</LEM> \msCb\Ed; ×tā \msCa\oo

                 <LEM>°kalā°</LEM> \Ed; °kala° \msCa\msCb}

\par brahmaṇyo vatsalo loke sarvaśāstraviśāradaḥ||12.62||

\par vipula uvāca| 

\par atra śreṣṭhim upāsyāmi nāma vā tasya kiṃ vada|

        \footnote{63b <LEM>nāma</LEM> \msCa\msCb; nāmaṃ \Ed\oo

                 <LEM>vada</LEM> \msCa\Ed; vadaḥ \msCb}

\par katamo deśas tadvāsaḥ kathayasva na saṃśayaḥ||12.63||

        \footnote{63d <LEM>kathayasva</LEM> \msCa\Ed; kathayasya \msCb}

\par vipulenaivam uktas tu pathikovāca taṃ punaḥ|

\par mama bhīmabalo nāma śreṣṭhikasya gṛhāgataḥ||12.64||

        \footnote{64c <LEM>mama bhīmabalo nāma</LEM> \msCb\msCc\msNa; mama bhī×balo nāma \msCa, \om\ \Ed}

\par śreṣṭhikaḥ puṇḍako nāma khyātaḥ śreṣṭhika ucyate|

\par kautukaṃ tava yady asti tad āgaccha mayā saha||12.65||

\par evam astv iti tenokto vipulena mahātmanā|

        \footnote{66c <LEM>°stv iti</LEM> \msCa\msNa\Ed; °stiti \msCb\msCc\oo

                 <LEM>°kto</LEM> \mssCaCbCc\msNa; °ktau \Ed}

\par tenaiva saha niryātaḥ śreṣṭhikasya gṛhaṃ prati||12.66||

        \footnote{66b <LEM>prati</LEM> \msCa\msCb\msNa; pratiḥ \Ed\msCc}

\par śreṣṭhikaḥ svagṛhāsīno dṛṣṭaḥ sa vipulena tu|

        \footnote{67c <LEM>śreṣṭhikaḥ</LEM> \Ed\msCb\msCc; śreṣṭhitaḥ \msCa, śreṣṭhikaḥ \msNa\

             67d <LEM>dṛṣṭaḥ sa</LEM> \msCb\Ed; \uncl{dṛ}×× \msCa, dṛṣṭa sa \msCc}

\par tasyāntikam upāgamya tat phalaṃ sa niveditaḥ||12.67||

\par aho phalam idaṃ śreṣṭham aho phalam ihānitam|

\par aho rūpam aho gandham aho phalaṃ suśobhanam||12.68||

        \footnote{68c <LEM>gandham</LEM> \msCa\msCbpcorr\Ed; gandham aho gandham \msCbacorr\

             68d <LEM>phalaṃ</LEM> \corr; phala \msCa\msCb\Ed}

\par tat phalaṃ na mahījātaṃ na merau na ca kandare|

        \footnote{69a <LEM>tat pha°</LEM> \msCa\msCb; yat pha° \Ed}

\par devalokika suvyaktaṃ na martya upajāyate||12.69||

        \footnote{69d <LEM>martya upajāyate</LEM> \eme;

                      martya\uncl{mupajā}×× \msCa, martya supajāyate \msCb, mahyām upajāyate \Ed}

\par aho 'smi saphalaṃ bhoktā rājārhaś ca na saṃśayaḥ|

        \footnote{70a <LEM>aho</LEM> \msCb; ×ho \msCa; adyo \Ed\oo

                 <LEM>saphalaṃ</LEM> \msCb; \uncl{sa}phalam \msCa, tat phalaṃ \Ed}

\par ḍhaukayitvā phalaṃ divyaṃ rājānaṃ toṣayāmy aham||12.70||

\par tatas tvarita gatvaiva phalaṃ gṛhya manoharam|

        \footnote{71a <LEM>tvarita</LEM> \Ed; tvaritaṃ \msCa\msCb\ \unmetr}

        \footnote{71b <LEM>gṛhya</LEM> \msCa\Ed; gṛha \msCb\

                 <LEM>°haram</LEM> \msCa\msCb; °ramam \Ed}

\par ādareṇopasṛtyaiva rājānaṃ sa phalaṃ dadau||12.71||

        \footnote{71d <LEM>sa phalaṃ</LEM> \msCa\msCb; tat phalaṃ \Ed}

\par rājā ca sa phalaṃ dṛṣṭvā vismayaṃ paramaṃ gataḥ|

        \footnote{72a <LEM>sa phalaṃ</LEM> \msCa\msCb; tat phalaṃ \Ed}

\par kutaḥ śreṣṭhi tvayā nītaṃ phalaṃ sarvamanoharam||12.72||

        \footnote{72c <LEM>śreṣṭhi</LEM> \msCa\msCb; śreṣṭha \Ed}

        \footnote{72d <LEM>phalaṃ sarvamanoharam</LEM> \Ed; phala××××haram \msCa\ phala\uncl{m ya}rvamanoharam \msCb}

\par svādumūlaphalakandaṃ dṛṣṭvā pūrvaṃ na tādṛśam|

        \footnote{73a <LEM>°kandaṃ dṛṣṭvā</LEM> \msCa; °skanda dṛṣṭvā \msCb,°skanda dṛṣṭā \Ed}

        \footnote{73b <LEM>tādṛśam</LEM> \msCa\msCb; yādṛśam \Ed}

\par rūpagandhaguṇopetaṃ hṛdayānandakārakam||12.73||

\par sadya evopabhuñjāmi tvayā dattam idaṃ phalam|

        \footnote{74a <LEM>sadya evopayuñjāmi</LEM> \msCa\msCb; satya eva prabhuñjāmi \Ed}

\par kīdṛśaṃ svāda vijñātum icchāmi kuru māciram||12.74||

        \footnote{74c <LEM>svādavijñānam</LEM> \msCa\msCb; svādu vijñātum \Ed}

\par tataḥ sa bhakṣayām āsa phalaṃ cāmṛtasaṃnibham|

        \footnote{75a <LEM>tataḥ</LEM> \msCa\Ed; tata \msCb}

\par amṛtopamasusvādaṃ sarvaṃ ca bubhuje nṛpaḥ||12.75||

        \footnote{75cd <LEM>svādaṃ sarvaṃ ca</LEM> \msCb\Ed; svā×××× \msCa}

\par sadya ṣoḍaśavarṣasya yauvanaṃ samapadyata|

        \footnote{76b <LEM>°padyata</LEM> \msCa\msCb; °padyate \Ed}

\par na valīpalitaṃ sadyo na jarā na ca durbalaḥ||12.76||

        \footnote{76c <LEM>valī°</LEM> \msCa\msCb; vali° \Ed}

\par keśadantanakhasnigdho dṛḍhadanto dṛḍhendriyaḥ|

        \footnote{77b <LEM>°danto</LEM> \msCa; °deho \Ed}

\par tejaścakṣurbalaprāṇān sadya sarvān avāptavān||12.77||

        \footnote{77c <LEM>°cakṣurbalaprāṇān</LEM> \msCa\msCb; °cakṣuvalaprāṇaṃ \Ed}

\par mantrī purohitāmātya sarve bhṛtyajanās tathā|

        \footnote{78b <LEM>sarve bhṛtyajanās tathā</LEM> \msCa\Ed; janās tathās tathā \msCb}

\par paurastrī bālavṛddhāś ca sarve te vismayaṃ gatāḥ||12.78||

        \footnote{78c <LEM>°strī</LEM> \msCa\msCb; °stri \Ed}

        \footnote{78d <LEM>sarve</LEM> \msCb\Ed; ×× \msCa}

\par rājā siṃhajaṭo nāma tuṣṭim eva parāṃ gataḥ|

\par praharṣam atulaṃ caiva prāptavān sa nareśvaraḥ||12.79||

\par uvāca rājā taṃ śreṣṭhiṃ svārthatatparanirdayaḥ|

        \footnote{80a <LEM>śreṣṭhiṃ</LEM> \msCa\msCb; śreṣṭhaṃ \Ed}

        \footnote{80b <LEM>°dayaḥ</LEM> \msCa\msCb; °daya \Ed}

\par kuru bhīmabalas tv evaṃ phalam ānaya adya vai||12.80||

        \footnote{80c <LEM>kuru</LEM> \msCa\msCb; śṛṇu \Ed\oo

                 <LEM>bhīmabalas tv evaṃ</LEM> \msCb\msCc; bhīmavastv evaṃ \msCa\Ed}

\par punar me yauvanaprāptis tvatprasādān narottama|

        \footnote{81b <LEM>°ttama</LEM> \msCa\msCb; °ttamaḥ \Ed}

\par kekayīṃ durbalāṃ vṛddhāṃ punaḥ prāpaya yauvanam||12.81||

        \footnote{81c <LEM>kekayīṃ durbalāṃ</LEM> \corr; kaikayīn durbalān \msCa, kekayīṃ \msCb, kekayī durbalā \Ed}

        \footnote{81cd <LEM>vṛddhāṃ punaḥ</LEM> \msCb; vṛ\uncl{ddhā}×× \msCa, vṛddhā punaḥ \Ed}

\par sa rājñā evam uktas tu śreṣṭhī bhīmabalas tathā|

        \footnote{82b <LEM>śreṣṭhī</LEM> \Ed; śreṣṭhi \msCa\msCb}

\par pratyuvāca ha rājānaṃ prāñjaliḥ praṇataḥ sthitaḥ||12.82||

        \footnote{82c <LEM>°vāca ha</LEM> \msCa; °vācāha \Ed}

\par na phaledaṃ vane rājan na vāṇijyakṛṣeṇa vā|

        \footnote{83a <LEM>na phaledaṃ</LEM> \Ed; na vane na \msCa}

\par kenāpi kulaputreṇa tava darśanakāṃkṣayā||12.83||

\par datto 'smi tava rājendra mayā datto 'si bhūpate|

        \footnote{84b <LEM>datto 'si</LEM> \msCa; prāpto ṣi \Ed}

\par na te śaknomy ahaṃ rājan vaktuṃ vaideśinaṃ naram||12.84||

        \footnote{84c <LEM>te</LEM> \msCa; ca \Ed}

        \footnote{84cd <LEM>rājan vaktuṃ</LEM> \Ed; rā××ktum \msCa}

        \footnote{84d <LEM>vaideśinaṃ naram</LEM> \corr; \uncl{vai}deśinan naram \msCa, ca dehi tannaraḥ \Ed}

\par śrutvā bhīmabalaṃ vākyaṃ pratyuvāca tataḥ punaḥ|

        \footnote{85a <LEM>°balaṃ</LEM> \Ed; °bala° \msCa\ \unmetr}

\par amātyakulaputras tvaṃ brūhi madvacanaṃ punaḥ||12.85||

\par yadi nāsti kim etat taṃ mayā vā prārthito bhavān|

        \footnote{86a <LEM>kim etat</LEM> \Ed; kim edat \msCa}

        \footnote{86b <LEM>prārthito</LEM> \Ed; mārjjito \msCa}

\par yatra hy eko bahavo 'tra jāyante nātra saṃśayaḥ||12.86||

        \footnote{86c <LEM>yatra hy eko bahavo 'tra</LEM> \msCa\ \unmetr; 

                                yatraścaiko bahūn tatra \Ed}

\par āgamopāyamārgaṃ ca tenaiva sa tu gamyatām|

\par avaśyaṃ tena gantavyaṃ tena mārgeṇa mārgaya||12.87||

        \footnote{87c <LEM>avaśyaṃ tena</LEM> \Ed; ava\uncl{sya}×na \msCa}

        \footnote{87d <LEM>mārgaya</LEM> \msCa; mārgayaḥ \Ed}

\par adattvā phalam anyac ca śiraś chedyāmi durmateḥ|

        \footnote{88b <LEM>°mateḥ</LEM> \eme; °mate \msCa\Ed}

\par chedya caṇḍavicaṇḍābhyāṃ rakṣabhīmabalādhamaḥ||12.88||

        \footnote{88c <LEM>chedya</LEM> \Ed; chedye \msCa}

\par tato bhīmabalaḥ kruddhaḥ khaḍgaṃ gṛhya śaśiprabham|

        \footnote{89b <LEM>śaśiprabham</LEM> \msCa; śaśī pradam \Ed}

\par alaṅghya vacanaṃ rājñaḥ kulaputra vraja tvaram||12.89||

        \footnote{89c <LEM>alaṅghya</LEM> \msCa; uvāca \Ed}

        \footnote{89d <LEM>kulaputra vraja tvaram</LEM> \Ed; kulaputraṃ vrajatyaram \msCa}

\par mā ruṣa kulaputra tvaṃ mayā vadhyo bhaviṣyasi|

        \footnote{90a <LEM>°putra</LEM> \msCa; °putras \Ed}

\par yady asti phalam anyad vā dehi rājānam adya vai||12.90||

        \footnote{90c <LEM>yady asti</LEM> \Ed; ×dyosti \msCa}

\par yatra prāptaṃ phalaṃ divyaṃ tatra vā deśaya tava|

        \footnote{91a <LEM>prāptaṃ</LEM> \msCa; prāpti \Ed}

        \footnote{91b <LEM>deśaya</LEM> \msCa; deśayan \Ed}

\par tatphalena vinā bhadra durlabhaṃ tava jīvitam||12.91||

\par vipula uvāca| 

\par jīvitāśām ahaṃ prāpto vaideśi bhavanaṃ tava|

\par kṛtakartā kathaṃ vadhyaḥ prāpnuyām aham adya vai||12.92||

        \footnote{92d <LEM>prāpnuyām</LEM> \msCa; prāpto 'yam \Ed}

\par phalaṃ vā na punas tv anyad dātuṃ śakyaṃ na kenacit|

        \footnote{93b <LEM>śakyaṃ na kenacit</LEM> \Ed; śakya××nacit \msCa}

\par sahya parvataśailāgre āśīnaḥ śrāntamānasaḥ||12.93||

\par vānaras tatphalaṃ gṛhya mama dattvā punar gataḥ|

        \footnote{94b <LEM>mama</LEM> \msCa; mahyaṃ \Ed}

\par mayā dattam idaṃ tubhyaṃ tvayāpi ca narādhipe||12.94||

\par tatra gacchāva bho śreṣṭhi dṛśyate yadi vānaraḥ|

\par tvayā mayā ca gatvaiva yo vāsaḥ plavagādhipaḥ||12.95||

        \footnote{95c <LEM>gatvaiva</LEM> \Ed; gatveva \msCa}

\par śreṣṭhinā ca tathety āha gacchāmaḥ sahitā vayam|

        \footnote{96b <LEM>gacchāmaḥ</LEM> \Ed; ga×mas \msCa}

\par yatra prāptaṃ phalaṃ tubhyaṃ mokṣayāmo na saṃśayaḥ||12.96||

        \footnote{96c <LEM>prāptaṃ</LEM> \msCa; prāpta \Ed}

\par rudra uvāca| 

\par tam āruhya giriṃ sahyaṃ mārgamāṇaḥ samantataḥ|

        \footnote{97b <LEM>°mānaḥ</LEM> \msCa; °mānāḥ \Ed}

\par vipulena tato dṛṣṭo vānaraḥ plavagādhipaḥ||12.97||

        \footnote{97d <LEM>plavagā°</LEM> \Ed; plagā° \msCa}

\par ayaṃ sa vānaraśreṣṭho vṛkṣacchāyāsamāśritaḥ|

        \footnote{98a <LEM>vānara°</LEM> \msCa; vānaraḥ \Ed}

        \footnote{98b <LEM>°cchāyā°</LEM> \Ed; °cchāṃyā° \msCa}

\par mama puṇyabalenaiva dṛśyate 'dyāpi vānaraḥ||12.98||

\par vānara kuru mitrārthaṃ sadyomṛtyur bhaven mama|

\par pūrvadattaṃ phalam anyad dehi vānara jīvaya||12.99||

        \footnote{99d <LEM>vānara jīvaya</LEM> \msCa; vā na ca jīvaye \Ed}

\par vānara uvāca| 

\par gandharveṇa mama dattaṃ phalaṃ dattaṃ tu te mayā|

\par punar anyat kathaṃ dāsye tatra gaccha yadīcchasi||12.100||

\par vipula uvāca| 

\par adattvā tat phalaṃ tubhyaṃ jīvituṃ saṃśayo bhavet|

\par athavā tatra gacchāmo yatra citrarathaḥ svayam||12.101||

        \footnote{101c <LEM>athavā tatra</LEM> \Ed; a×××tra \msCa}

\par vānaraḥ punar evāha evaṃ kurvāmahe vayam|

\par tataś citrarathāvāsam upagamyedam abravīt||12.102||

        \footnote{102c <LEM>tataś</LEM> \msCa; tatra \Ed}

\par gandharvarāja kāryārthī tvaṃ hy ahaṃ punar āgataḥ|

        \footnote{103b <LEM>tvaṃ</LEM> \msCa; tvat \Ed}

\par pūrvadattaphalaṃ tv anyad dehi māṃ yadi śakyate||12.103|| 

\par gandharvarājovāca|

\par sūryalokagataś cāsmi tena dattaṃ phalottamam|

        \footnote{104a <LEM>gataś cāsmi</LEM> \Ed; gata\uncl{ś cā}× \msCa}

        \footnote{104b <LEM>tena dattaṃ</LEM> \Ed; ×××ttam \msCa}

\par mayā dattaṃ phalaṃ tubhyam atyantasuhṛdo 'si me||

        \footnote{104c <LEM>dattaṃ</LEM> \corr; datta° \msCa\Ed}

\par kuto 'nyat phalam ādāsye mama nāsti plavaṅgama|

        \footnote{105a <LEM>'nyat phalam ādāsye</LEM> \msCa; 'nyaphala dāsyāmi \Ed}

        \footnote{105b <LEM>mama nāsti plavaṅgama</LEM> \msCa; matto 'sti plavaṅgamaḥ \Ed}

