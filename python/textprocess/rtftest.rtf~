        \footnote{112b <LEM>anyan</LEM> \msCa; anyān \Ed}

\par na dattāsi phalam anyan mayā vaddhyo bhaviṣyasi||12.112||

        \footnote{112c <LEM>phalam anyan</LEM> \msCa; phalaṃ manye \Ed}

        \footnote{112d <LEM>vaddhyo</LEM> \msCa; vaddho \Ed}

