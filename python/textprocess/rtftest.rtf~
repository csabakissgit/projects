\par sahasreṣu ca ekaikam ayutaiḥ parivāritam|

        \footnote{53ab <LEM>ekaikam a°</LEM> \msCa\msCb\Ed; ekaikaṃ ma° \msCc\msNa}

        \footnote{53b <LEM>parivāritam</LEM> \mssCaCbCc\msNa; parivāritamāḥ \Ed}

\par ayutaiḥ prayutair vṛndaiḥ prayutair niyutair vṛtaḥ||1.53||

        \footnote{53c <LEM>ayutaiḥ</LEM> \mssCaCbCc\msNa; ayutaṃ \Ed}

        \footnote{53d <LEM>prayutair ni°</LEM> \msCa\msCb\msNa; prayuter ni° \msCc, prayutaṃ ni° \Ed}

\par ekaikasya parīvāro niyutaḥ pṛthag eva ca|

        \footnote{54a <LEM>parīvāro</LEM> \mssCaCbCc\msNa; parivāro \Ed}

        \footnote{54b <LEM>niyutaḥ</LEM> \msCa\msCb\msNa\Ed; niyuta \msCc}

\par koṭibhir daśakoṭyena ekaikaḥ parivāritaḥ||1.54||

        \footnote{54c <LEM>koṭibhir da°</LEM> \msCa\msCc\msNa\Ed; koṭibhi \msCb\oo

                 <LEM>°koṭyena</LEM> \mssCaCbCc\Ed; °koṭyona \msNa}

        \footnote{54d <LEM>ekaikaḥ</LEM> \msCa\msCb\msNa\Ed; ekaika \msCc\oo

                 <LEM>parivāritaḥ</LEM> \msCb\msCc\msNa\Ed; parivāri<UNCL>taḥ</UNCL> \msCa}

\par daśakoṭiṣu ekaikaṃ vṛndavṛndabhṛtair vṛtam|

        \footnote{55a <LEM>°koṭiṣu</LEM> \msCb\msCc\Ed; °koṭīṣu \msCa\msNa}

        \footnote{55b <LEM>°vṛndabhṛtair vṛtam</LEM> \mssCaCbCc; °vṛndavṛtair vṛtaṃ \msNa, °vṛndaṃ vṛtair vṛtaḥ \Ed}

\par vṛndavargeṣu ekaikaṃ kharvabhiḥ parivāritam||1.55||

        \footnote{55d <LEM>°vāritam</LEM> \mssCaCbCc\msNa; °vāritaḥ \Ed}

\par kharvavargeṣu ekaikaṃ daśakharvagaṇair vṛtam|

        \footnote{56b <LEM>°gaṇair vṛtam</LEM> \msCa\msCc\msNa; °gaṇai vṛtam \msCb, °gaṇair vṛtaḥ \Ed}

