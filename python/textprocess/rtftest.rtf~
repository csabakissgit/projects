        \footnote{45c <LEM>°vāsaṃ</LEM> \mssCaCbCc\msNa\msNb\msNc; °vāsaś \Ed}

        \footnote{45d <LEM>°vāsaṃ</LEM> \mssCaCbCc\msNa\msNb\msNc; °vāsaś \Ed}

