        \footnote{110d <LEM>śaśim</LEM> \msCa; śaśi \Ed}

\par soma uvāca| 

\par kimartham āgato bhūyaḥ kartavyaṃ tatra bhāskara|

        \footnote{111b <LEM>tatra</LEM> \msCa; tava \Ed\oo

                 <LEM>°kara</LEM> \msCa; °karaḥ \Ed}

\par phalaṃ dātuṃ punas tv anyan muktvā tv anyat karomy aham||12.111||

        \footnote{111c <LEM>anyan</LEM> \eme; anya \msCa, anyat \Ed}

        \footnote{111d <LEM>muktvā</LEM> \msCa; muktā \Ed\oo

                 <LEM>anyat ka°</LEM> \eme; anyaṅ ka° \msCa\Ed}

