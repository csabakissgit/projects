        \footnote{129c <LEM>°sphāṭiko jāla</LEM> \msCa; °sphaṭiko jālā \Ed}

\par dṛśyate vipulas tatra nānāvṛkṣa manoramāḥ|

        \footnote{130a <LEM>dṛśyate</LEM> \conj; paśyate \msCa, dṛśyante \Ed\oo

                 <LEM>vipula°</LEM> \msCa; vipulā° \Ed}

\par puṣpānāmitavṛkṣāgrāḥ phalānāmitakā bhavet||12.130||

        \footnote{130c <LEM>puṣpā°</LEM> \msCa; puṣpa° \Ed\oo

                 <LEM>°grāḥ</LEM> \eme; °grā \msCa, °yā \Ed}

        \footnote{130d <LEM>phalānāmitakā</LEM> \msCa; phalanāmitakāṃ \Ed}

\par sarve ratnamayā vṛkṣāḥ sarve ratnamayaṃ jalam|

\par vṛkṣagulmalatāvallī kandamūlaphalāni ca||12.131||

\par sarve ratnamayā dṛṣṭā vipulo vipulekṣaṇaḥ|

        \footnote{132a <LEM>sarve</LEM> \Ed; sarvai \msCa}

\par anekabhaumaṃ prāsādaṃ muktādāmavibhūṣitam||12.132||

\par apsarogaṇakoṭībhiḥ sarvābharaṇabhūṣitam|

\par vimānakoṭikoṭīśaṃ sarvakāmasamanvitam||12.133||

        \footnote{133cd \om\ \Ed}

\par brahmalokasabhā ramyā sūryakoṭisamaprabhā|

\par tatra brahmā sukhāsīno nānāratnopaśobhite||12.134||

\par caturmūrtiś caturvaktraś caturbāhuś{}caturbhujaḥ|

\par caturvedadharo devaś caturāśramanāyakaḥ||12.135||

\par caturvedāvṛtas tatra mūrtimantam upāsate|

\par gāyatrī vedamātā ca sāvitrī ca surūpiṇī||12.136||

\par vyāhṛtiḥ praṇavaś caiva mūrtimān samupāsate|

        \footnote{137a <LEM>praṇavaś caiva</LEM> \Ed; praṇa\uncl{va}×va \msCa}

\par vauṣaṭkāro vaṣaṭkāro namaskāraḥ sa mūrtimān||12.137||

\par śrutiḥ smṛtiś ca nītiś ca dharmaśāstraṃ samūrtimān|

        \footnote{138b <LEM>°śāstraṃ samūrtimat</LEM> \msCa; °śāstrasamūrtimān \Ed}

\par itihāsaḥ purāṇaṃ ca sāṃkhyayogaḥ patañjalam||12.138||

        \footnote{138c <LEM>purāṇaṃ</LEM> \msCa; purāṇaś \Ed}

        \footnote{138d <LEM>°jalam</LEM> \msCa; °jali \Ed}

\par āyurvedo dhanurvedo vedo gāndharva-m-eva ca|

        \footnote{139b <LEM>gāndharva-m-eva</LEM> \msCa; gāndharvar eva \Ed}

\par arthavedo 'nyavedāś ca mūrtimān samupāsite||12.139||

        \footnote{139c <LEM>arthavedo 'nyavedāś ca</LEM> \Ed; arthavedānyavedañ ca \msCa}

\par tato brahmā samutthāya abhigamya janārdinam|

\par gāṃ ca arghaṃ ca dattvaivam āsyatām iti cābravīt||12.140||

        \footnote{140c <LEM>arghaṃ</LEM> \msCa; arghyaṃ \Ed}

\par maṇiratnamaye divye āsane garuḍadhvajaḥ|

\par devarājo raviḥ somo gandharvaḥ plavageśvaraḥ||12.141||

        \footnote{141c <LEM>raviḥ somo</LEM> \msCa; śaśī sūryo \Ed}

\par vipulaś ca mahāsattva āsyatāṃ ratna-āsane|

        \footnote{142b <LEM>°āsane</LEM> \msCa; °śāśane \Ed}

\par sādhu bho vipulaśreṣṭha sādhu bho vipulaṃ tapaḥ||12.142||

        \footnote{142d <LEM>vipulaṃ tapaḥ</LEM> \Ed; \uncl{vi}×××paḥ \msCa}

\par sādhu bho vipulaprājña sādhu bho vipulaśriya|

        \footnote{143b <LEM>°śriya</LEM> \msCa; °śriyaḥ \Ed}

\par toṣitāḥ sma vayaṃ sarve brahmaviṣṇumaheśvarāḥ||12.143||

        \footnote{143c <LEM>toṣitāḥ</LEM> \msCa; toṣitā \Ed}

\par ādityā vasavo rudrā sādhyāśvinau marut tathā|

        \footnote{144b <LEM>sādhyāśvinau</LEM> \conj; sādhyāśvinyau \msCa, sādhyā yakṣo \Ed}

\par bhuṅkṣva bhogān yathotsāhaṃ mama loke yathāsukham||12.144||

        \footnote{144c <LEM>bhuṅkṣva</LEM> \msCa; bhuṃkṣa \Ed}

\par iyaṃ vimānakoṭīṇāṃ tavārthāyopakalpitā|

        \footnote{145b <LEM>kalpitā</LEM> \msCa; kalpitān \Ed}

\par sahasrāṇāṃ sahasrāṇi apsarā kāmarūpiṇī||12.145||

        \footnote{145d <LEM>°rūpiṇī</LEM> \msCa; °rūpiṇi \Ed}

\par tavārthīyopasarpanti sarvālaṃkārabhūṣitāḥ|

        \footnote{146a <LEM>v°rthīyo°</LEM> \msCa; °rtheyo° \Ed}

\par yāvat kalpasahasrāṇi parārdhāni tapodhana|

        \footnote{146d <LEM>°dhana</LEM> \msCa; °dhanāḥ \Ed}

\par yatra yatra prayāsitvaṃ tatra tatropabhujyatām||

\par maheśvara uvāca| 

\par iti śrutvā vacas tasya vipulo vipulekṣaṇaḥ|

\par vepamāno bhayatrasta aśrupūrṇākulekṣaṇaḥ||12.147||

        \footnote{147c <LEM>bhayatrasta</LEM> \Ed; bhayas tatra \msCa}

\par praṇamya śirasā bhūmau praṇipatya punaḥ punaḥ|

\par uvāca madhuraṃ vākyaṃ brahmaloke pitāmaham||12.148||

        \footnote{148d <LEM>°loke</LEM> \Ed; °loka \msCa}

\par vipula uvāca| 

\par bhagavan sarvalokeśa sarvalokapitāmaha|

\par svapnabhūtam ivāścaryaṃ paśyāmi tridaśeśvara||12.149||

\par smṛtibhraṃśaś ca me jāto buddhir jātāndhacetanā|

        \footnote{150b <LEM>jātāndhacetanā</LEM> \msCa; jāto 'ndhacetanaḥ \Ed}

\par mūḍho 'haṃ tvāṃ kathaṃ staumi jñānātītaṃ parāt param||12.150||

        \footnote{150cd \om\ \msCa}

\par\par tubhyaṃ trailokyabandho bhava mama śaraṇaṃ trāhi saṃsāraghoram

        \footnote{151a <LEM>tubhyaṃ</LEM> \msCa; namas \Ed}

\par   \par bhīto 'haṃ garbhavāsāj jaramaraṇabhayāt trāhi māṃ mohabandhāt|

        \footnote{151b <LEM>°jara°</LEM> \msCa; °janu° \Ed\oo

                 <LEM>°bhayāt</LEM> \Ed; bhayan \msCa}

\par ! nityaṃ rāgādhivāsam aniyatavapuṣaṃ trāhi māṃ kālapāśāt

        \footnote{151c <LEM>rogā°</LEM> \msCa; °rāgā° \Ed}

\par    \par tiryaṃ cānyonyabhakṣaṃ bahuyugaśataśas trāhi mohāndhakārāt||12.151||
\par
        \footnote{151d <LEM>tiryaṃ</LEM> \msCa; tiryaś \Ed}

\par\par śrutvaivovāca brahmā vipulamati punar mānayitvā yathāvat

        \footnote{152a <LEM>śrutvaivovāca</LEM> \msCa; śrutvaiva vāca \Ed\oo

                 <LEM>°mati</LEM> \Ed; °matiḥ \msCa\oo

                 <LEM>mānayitvā</LEM> \msCa; mānayaṃvā \Ed}

\par   \par ! āhūta samplavante bhaviṣyasi tava me janmalobho na bhūyaḥ|

        \footnote{152b <LEM>āhūta</LEM> \msCa; ābhūta \Ed\oo

                 <LEM>bhaviṣyasi</LEM> \msCa; avipali \Ed\oo

                 <LEM>me janmalobho na</LEM> \msCa; yajanmalābhānu \Ed}

\par garbhāvāsannacatvanna ca punamaraṇaṃ kleśam āyāsapūrṇam

        \footnote{152c <LEM>°vāsannacatvanna</LEM> \msCa; °vāsānubandhaṃ na \Ed\oo

                 <LEM>puna</LEM> \Ed; punar \msCa}

\par    \par chittvā mohāndhaśatruṃ vrajasi ca paramaṃ brahmabhūyatvam esi||12.152||
\par
\par maheśvara uvāca| 

\par brahmaṇā evam uktas tu viṣṇunā prabhaviṣṇunā|

\par evaṃ bhavatu bhadraṃ vo yathovāca pitāmahaḥ||12.153||

\par indreṇa raviṇā caiva somena ca punaḥ punaḥ|

        \footnote{154a <LEM>raviṇā</LEM> \msCa; śaśinā \Ed}

        \footnote{154b <LEM>somena</LEM> \msCa; sūryeṇa \Ed}

\par sādhyādityair marudrudrair viśvebhir vasavais tathā||12.154||

        \footnote{154b <LEM>viśvebhir</LEM> \Ed; viśveśvi \msCa}

\par aho tapaḥ phalaṃ divyaṃ vipulasya mahātmanaḥ|

\par svaśarīraṃ divaṃ prāptaṃ śraddhayā tithipūjayā||12.155||

        \footnote{155c <LEM>sva°</LEM> \msCa; sa° \Ed}

        \footnote{155d <LEM>°pūjayā</LEM> \msCa; °pūjanāt \Ed}

\par evam ādīny anekāni vipule parikīrtitam|

\par brahmāṇaṃ punar evāha viṣṇur viśvajagatprabhuḥ||12.156||

<TEXT> \par ||iti vṛṣasārasaṃgrahe vipulopākhyāno nāmādhyāyo dvādaśamaḥ||\par

        \footnote{ ŁColophon: $ <LEM>nāmādhyāyo dvādaśamaḥ</LEM> \msCa; nāma dvādaśo 'dhyāyaḥ \Ed}

\par*** 13 ***\par
 13 garbhotpattiḥ  

\par devy uvāca| 

\par ahiṃsātithyakānāṃ ca śruto dharmaḥ suvistaraḥ|

\par kiṃ na kurvanti manujāḥ sukhopāyaṃ mahat phalam||13.1||

\par svaśarīrasthito yajñaḥ svaśarīre sthitaṃ tapaḥ|

\par svaśarīre sthitaṃ tīrthaṃ śruto vistarato mayā||13.2||

\par kimarthaṃ bhagavan brūhi sukhopāyaṃ mahat phalam|

\par kiṃ nivṛttās tu deveśa ṛṣidaivatamānuṣāḥ||13.3||

\par mahādeva uvāca| 

        \footnote{4 <LEM>mahādeva</LEM> \msCa; bhagavān \Ed}

\par adya pṛṣṭena kathitaṃ gopitaṃ ṛṣi sundari|

\par mānuṣāṇāṃ hitārthāya tava ca varavarṇini||13.4||

\par adyaprabhṛti deveśi khyātir loke bhaviṣyati|

\par dhanyā evaṃ cariṣyanti adhanyā na ramanti tam||13.5||

\par triguṇena tu bandhena baddhā pāśadṛḍhena tu|

\par tenārthena ramanty atra jānanto 'pi vimohitāḥ||13.6||

\par devy uvāca| 

\par kiṃ vā triguṇabandheti brūhi saṃśayachedaka|

\par adyāpi mama deveśa mohotpannas tribandhanaiḥ||13.7||

\par bhagavān uvāca| 

\par prākṛtaṃ vaikṛtaṃ caiva dakṣiṇābandham eva ca|

\par etenaiva tu bandhena baddhāḥ varṇāśramāḥ sadā||13.8||

\par jñānahīnā nivartante paramaṃ prāpya tatparam|

\par iṣṭastrīṇā nivartante dhanadhānyasamuccaye|

\par snehād ākṛṣya manasāṃ bandhaḥ prākṛta ucyate||

\par yogayuktena manasā yad yad aiśvaryam āpyate|

\par tac ca vaikṛtabandhas tu yadi tatrānurajyate||13.10||

\par ārāmodyānavāpīṣu dānakratuphaleṣu ca|

\par āśaktamanasā vācā dakṣiṇābandhaḥ kathyate||13.11||

\par anenaiva tu pāśena baddhāvānaravad yathā|

\par mokṣitaṃ na ca śaknoti itaś cetaś ca dhāvati||13.12||

\par devāsuramanuṣyeṣu tiryeṣu narakeṣu ca|

\par bhramante cakrayantreva ? yāvat tattvaṃ na vindati||13.13||

\par garbhavāsaparikleśau janmamṛtyu punaḥ punaḥ|

\par vyādhiḥ śokabhayāyāsa cintayā jarayā hataḥ||13.14||

\par devy uvāca| 

\par garbhotpattiḥ kathaṃ deva yogī labhati kīdṛśīm|

\par kīdṛśaṃ labhate garbhaḥ śrotuṃ naḥ pratyudīryatām||13.15||

\par bhagavān uvāca| 

\par śṛṇu devi pravakṣyāmi garbhotpattir yathākramam|

\par yathā saṃśayavicchedaṃ bhaviṣyasi varānane||13.16||

\par akṣarāt prabhavo brahmā karmabaddhasamudbhavam|

\par karmato yajñaprabhavo yajñato dhūmasambhavaḥ||13.17||

\par parjanyād annam utpattir annād bhūtāni jajñire|

\par annād rasasamutpatti rasāc choṇitasambhavaḥ||13.18||

\par śoṇitāt - māṃsa-m-utpatti māṃsād medasamudbhavaḥ|

\par medaso 'sthīni jāyante asthibhyo majjasambhavaḥ||13.19||

\par majjāyās tu bhavec chukraṃ naraḥ śukrasamudbhavaḥ|

\par śukraśoṇitasaṃyogād garbhotpattis tataḥ smṛtaḥ||13.20||

\par agnisomātmakaṃ devi śarīradvayadhātutaḥ|

\par somadhātusmṛtaṃ śukram agnidhāturajasmṛtam|

\par agnisomāśrayaṃ devi śarīram iti saṃjñitam||

\par māsī māsī ṛtuḥ strīṇāṃ bhavatīha na saṃśayaḥ|

\par ṛtukāle prasarpyeta na sukhārthaṃ varānane||13.22||

\par putrakāmaprayuñjīta dharmārthaś ca yaśasvini|

\par pumān strīpuṃ prayuñjīta araṇī bahutāśanaḥ||13.23||

\par pumān śukrādhiko jñeyaḥ kanyā raktādhikā bhavet|

\par samaśukre ca rakte ca sa ca jāyen napuṃsakaḥ||13.24||

 dviyamā triyamā ca gurviṇī 

\par devy uvāca| 

\par dviyamā triyamā caiva kathaṃ jāyeta gurviṇī|

\par kathaṃ strīdviyamā jāyet kathaṃ vā puruṣadvayam||13.25||

\par bhagavān uvāca| 

\par raktādhikā smṛtā kanyā jāyate varavarṇini|

\par vāyunā ca dvidhā bhinnā kanyakadviyamā smṛtā||13.26||

\par śukrādhikās tu puruṣa dvidhā bhinnānilena tu|

\par dviyamā puruṣo jñeyā triyamās tu tridhā kṛte||13.27||

\par ṛtusnātā yadā nārī yadi garbhādi gṛhyati|

\par prathame ca dvitīye ca tṛtīye ca sa jīvati||13.28||

\par sameṣu janayet putraḥ kanyakā viṣame dine|

\par ṣaṣṭyāṣṭamau ca daśamī dvādaśī ca pumān bhavet||13.29||

\par pañcamī saptamī caiva navamekādaśī striyaḥ|

\par samarakte ca śukre ca śyāmaḥ saṃjāyate pumān||13.30||

\par rudhiraṃ tv ekarātreṇa kalalaṃ pratipadyate|

\par kalalaṃ pañcarātreṇa arbudatvaṃ prajāyate||13.31||

\par arbudaḥ saptarātreṇa māṃsapeśī samudbhavaḥ|

\par dvitīyaṃ saptarātreṇa tat sarvaṃ māṃsaśoṇitam||13.32||

\par tṛtīyaṃ saptarātreṇa hṛdayaṃ jāyate tataḥ|

\par tataḥ sarvāṇi gātrāṇi śiraś caivopajāyate||13.33||

\par hṛdaye jāyamāne tu mūrcchāntandrirarocakaḥ|

\par striyāḥ dhardiḥ praśekaś ca daurbalyaṃ copajāyate||13.34||

\par tasyā hi hṛdayaṃ nārī yadi bhakṣyati kiṃcana|

\par bhakṣyaṃ lohyaṃ tathā peyam upabhogās tathāyayat||13.35||

\par śayanāsanayānāni vastrāṇy ābharaṇāni ca|

\par yad yad ākāṃkṣate kiṃcit tat tad āsyai pradāpayet||13.36||

        <PARAL> \vo ŁCf.\ MBh 13.40.12:$

        śayyāsanam alaṃkāram annapānam anāryatām

        durvāgbhāvaṃ ratiṃ caiva dadau stgrībhyaḥ prajāpatiḥ</PARAL>

\par nāyā saṃkārayec cāsyā na caivam avamānayet|

\par mukham āpāṇḍuraṃ snigdhaṃ kapolastanakeśayoḥ||13.37||

\par śarīraś ca śriyā jaṣṭuṃ pīnoruśroṇi vakṣasam|

\par liṅgerebhir vijānīyāṃ garbhe jīvaṃ pratiṣṭhitam||13.38||

\par caturthe saptarātreṇa śiraś caivopajāyate|

\par pañcamasaptarātreṇa grīvā tatropajāyate||13.39||

\par ṣaṣṭhamasaptarātreṇa skandhagātraṃ prajāyate|

\par saptamasaptarātreṇa pṛṣṭhavaṃśa prajāyate||13.40||

\par aṣṭamasaptarātreṇa pāṇī jāyate cobhayau|

\par saptarātraṃ nava prāpya jāyate hṛdi pañjaram||13.41||

\par daśame saptarātre ca pādau jāyate cobhau|

\par udaraś copajāyeta saptaikādaśarātrike||13.42||

\par dvādaśasaptarātreṇa kukṣipārśveḥ prajāyate|

\par saptatraidaśarātreṇa kuṭisutropajāyate||13.43||

\par navaty aṣṭamarāteṇa jāyate sūtraviṃśati|

\par saptapañcadaśāhena sarvamedaḥ prajāyate||13.44||

\par ṣoḍaśasaptarātreṇa athisarvāṇi jāyate|

\par saptasaptadaśāhena jāyate snāyubandhanam||13.45||

\par saptamāṣṭādaśāhena jāyate mukhamaṇḍalam|

\par saptonaviṃśarātreṇa ghrāṇavaṃśaḥ prajāyate||13.46||

\par saptaviṃśatirātreṇa naitranāliṃ prajāyate|

\par saptaikaviṃśarātreṇa karṇayugmaṃ prajāyate||13.47||

\par dvāviṃśasaptarātreṇa jāyate dvau bhruvau tataḥ|

\par saptatriviṃśarātreṇa gaṇḍayugmaṃ prajāyate||13.48||

\par caturviṃśatisaptāhe oṣṭhayugmaṃ prajāyate|

\par pañcaviṃśatisaptāhe jihvā jāyate sundari||13.49||

\par ṣaḍviṃśasaptarātreṇa dantapaṅkti prajāyate|

\par unaviṃśatisaptāhe jāyate ca tvag eva ca||13.50||

\par triṃśatasaptarātreṇa jāyate nābhimaṇḍalam|

\par saptaikatriṃśarātreṇa sarvarandhraṃ prajāyate||13.51||

\par dvātriṃśasaptarātreṇa nakhaviṃśati jāyate|

\par tritriṃśasaptarātreṇa sarve sandhiḥ prajāyate||13.52||

\par pañcatriṃśati saptāhe sarvamarma prajāyate|

\par ṣaḍtriṃśasaptarātreṇa vedanā copajāyate||13.53||

\par saptatriṃśatisaptāhe īrṣyādveṣaḥ prajāyate|

\par aṣṭatriṃśatisaptāhe pañcātmakasamanvitam||13.54||

\par sarvāṅgam aṅgasampūrṇaḥ paripakva(ḥ) sa tiṣṭhati|

\par mātusvāśitapītaś ca nābhisūtrāganena tu||13.55||

\par ajātasyopadhāryante garbhasthasyaiva jantavaḥ|

\par tataḥ praviśate dehe nidrāsvapna yathā tathā||13.56||

\par nopalabhyati sūkṣmatvād araṇy agnir yathā tathā|

\par garbhodakena siktāṅgajarāyā pariveṣṭitaḥ||13.57||

\par jāti smarati tatrastho jantuś cetaḥsamanvitaḥ|

\par mṛtaś cāhaṃ punarjāto bhūyaś caiva punarmṛtaḥ||13.58||

\par sthāvarāṇāṃ sahasreṣu jāto 'smi vividheṣu ca|

\par caturvarṇavivarṇeṣu mānuṣeṣu sahasraśaḥ||13.59||

\par sāmprataṃ ca punar garbhaḥ kleśaḥ prāptaḥ suduḥsahaḥ|

\par idānīṃ jātamātro 'haṃ saṃskāraiś cāpi saṃskṛtaḥ||13.60||

\par yogam evābhisevāmi sā[ṃ]khyaṃ vā pañcaviṃśakam|

\par yatra janmajarā nāsti yatra mṛtyuś ca nāsti vai||13.61||

\par yatra brahma paraṃ vedyaṃ cariṣyāmi yatavrataḥ|

\par evam ādīny anekāni cintayitvā punaḥ punaḥ||13.62||

\par yāvat tiṣṭhati garbhastho jāti smarati pūrvikām|

\par tato jāyati kaṣṭena mahākleśena mānavaḥ||13.63||

\par yoniyantrasutīvreṇa pīḍyamānasuduḥkhitaḥ|

\par jātamātrosmṛtibhraṃśo bhavatīha acetaneḥ||13.64||

\par māyāmudgaratīvreṇa hataḥ kiṃ śubham ācaret|

\par eṣa garbhasamutpattiḥ kathito 'smi varānane|

\par duḥkhasaṃsārapraśamaṃ kiṃ bhūyaḥ śrotum icchasi||

<TEXT> \par ||iti vṛṣasārasaṃgrahe garbhotpattir nāma trayadaśo ! 'dhyāyaḥ||\par

\par*** 14 ***\par
 14 praśnavyākaraṇam  

\par devy uvāca| 

\par atidīrghātihrasvaś ca pumān kenopajāyate|

\par atigauro 'tikṛṣṇaś ca naro bhavati kiṃ prabho||14.1||

\par bhagavān uvāca| 

\par gṛhītagarbhā yā nārī nityam uttānaśālinī|

\par prasāritavimuktātmā so 'tidīrghaḥ prajāyate||14.2||

\par gṛhītagarbhā yā nārī śete saṃkucitā sadā|

\par raso 'nnādīni kaṭukaṃ sevanāḥ hrasva jāyate||14.3||

\par gṛhītagarbhā yā nārī nityaṃ kṣīropasevitā|

\par varakodravaśālī ca bhuktā cāpi yavodanam||14.4||

\par śuklavastrasrajā yuktā sātigauraṃ prajāyate|

\par gṛhītagarbhā yā nārī bāladhānyāni sevate||14.5||

\par kṛṣṇakodravatailādi māṣakṛṣṇayavodanam|

\par kṛṣṇavastrasrajādīni tasyāḥ kṛṣṇaḥ prajāyate||14.6||

\par devy uvāca| 

\par jātyandho jāyate kasmānṣaṇḍhobhīrur hatendriyaḥ|

\par kujo vā vāmano vāpi paṅgavaḥ sthūlaśiraḥ katham||14.7||

\par bhagavān uvāca| 

\par gṛhītagarbhā yā nārī tīkṣṇoṣṇāny upasevate|

\par laśunānipalāṇḍūni karañjamūlakāni ca||14.8||

\par pippalīśṛṅgaveraṃ ca sarṣapānmaricāni ca|

\par āsavaś ca parikliṣṭā ye cānye kaṭutiktakāḥ||14.9||

\par tīkṣṇaṃ tu sevamānā yā jātyandho jāyate sutaḥ|

\par mithyāpacārāḥ strīpuṃso vyāpanne śukraśoṇite|

\par yadā garbhāśaye raktaṃ striyāḥ pūrvaṃ niṣicyate||

\par paścāc chukraṃ raktakāle tadāṣaṇḍaḥ prajāyate|

\par trastodvigno yadā bhītastrīpuṃsāṃsūpajāyate||14.11||

\par tatra yo jāyate garbhabhiruḥ krandanako bhavet|

\par nisargakāle śukrasya vighna utpadyate yadā||14.12||

\par indriyāvartavighne tu tadā jāyed atindriyaḥ| 

\par gṛhītagarbhā yā nārī vātalāny upasevate||14.13||

\par kaṭukāni kaṣāyāni tiktāni ca viśeṣataḥ|

\par vātaḥ prakupitas tasyā garbham ātuhya tiṣṭhati||14.14||

\par kubjas tu jāyate tasmād garbhād vātanipīḍanāt|

\par nityasāsavaśīlāyā tathā cotkaṭukāśanā||14.15||

\par tasyā saṃhanyate garbho vāmanas tena jāyate|

\par ativyāyāmaśīlā tu ya nārī viṣamāsanī||14.16||

\par garbhaḥ saṃkṣubhyate tasyāḥ paṣaṇḍas tenopajāyate|

\par gṛhītagarbhā yā nārī rūkṣadhānyāni sevate||14.17||

\par vātaśleṣmaśirastho vai tasyā garbhasya kupyate|

\par tataḥ sthūlaśirās tena pumān jāyaty asaṃśayaḥ||14.18||

\par devy uvāca| 

\par karālāṅgā hanuḥ paṅgūr mūko gadgadabhāṣakaḥ|

\par vikṛtākṣas tv anakṣo vā bhavadrasvagudaḥ katham||14.19||

\par bhagavān uvāca| 

\par karālas tena doṣeṇa jāyate mānavas tathā|

\par atha karālaṃ kurute nārī lamboticūcukā|

\par tasmād anena doṣeṇa karālo jāyate pumān||

\par gṛhītagarbhā yā nārī raktapittāmayārditā|

\par gohanuṃ janayet yeṣā raktapittaprakopitaḥ||14.21||

\par gṛhītagarbhā yā nārī vātaśūlair upadrutā|

\par śukro dāvartanī cāpi paṅgū janayate sutam||14.22||

\par kṣudhārtā vedanārtā ca satataś copavāsinī|

\par mūkaṃ janayate bālaṃ dauhṛdaś ca vimānitā||14.23||

\par gṛhītagarbhā yā nārī visṛjet - māsa māsikam|

\par anakṣo jāyate tasyā garbhaśoṇitasaṃkṣayāt||14.24||

\par atha grastā yadā nārī vāto dāvartapīḍitā|

\par gṛhītagarbhā rukṣāṇi vātalāny upasevate||14.25||

\par vātasthānantatas tasyā garbhasyāpīḍitaṃ bhavet|

\par agudo jāyate tasmāj jātaś cāpi na jīvati||14.26||

\par devy uvāca| 

\par hīnāṅgo jāyate kasmād adhikāṅgo 'pi vā katham|

\par śvetapiṅgekṣaṇaḥ kasmāt kathaṃ lohitalocanaḥ||14.27||

\par bhagavān uvāca| 

\par garbhasya jāyamānasya - - -  jāyate nilaḥ|

\par vātābhyāṃ śleṣmaṇāt - - - tadaṅgaṃ parihīyate||14.28||

\par hīnāṅgo jāyate tasmāt pumān vātaprakopataḥ|

\par gṛhītagarbhā yā nārī madhurāṇy upasevate||14.29||

\par śṛṅgāṭakakalotyāni śālūkāni viśāni ca|

\par mocaṃ tālaphalaṃ caiva nārikelaphalaṃ tathā||14.30||

\par atikṣṇaṃ sevamānā tu adhikāṅgaṃprasūyate|

\par piṅgākṣaḥ śleṣmapittābhyāṃ śvetākṣaḥ śleṣmaṇā bhavet||14.31||

\par devy uvāca| 

\par kathaṃ vā jāyate putraḥ kanyakā kena jāyate|

\par apumān kena jāyeta dviyamā triyamā tathā||14.32||

\par bhagavān uvāca| 

\par śukrādhikaḥ pumān jñeyaḥ kanyā raktādhikā bhavet|

\par raktaśukrasamatvena jāyate sa napuṃsakaḥ||14.33||

\par piṇdībhūto yadā garbha mārutau vibhaved dvidhā|

\par evaṃ te dviyamā jñeyās triyamā ca tridhā kṛte||14.34||

\par devy uvāca| 

\par śoṇitaṃ māṃsa medaś ca asthi majjā ca pañcamī|

\par śarīrasthāni dṛśyante śukrasthānaṃ na dṛśyate||14.35||

\par tasyotpattiś ca sthānaṃ ca jñātum icchāmi tattvataḥ|

\par kathayasva trilokeśa cchettum arhasi saṃśayaḥ||14.36||

\par bhagavān uvāca| 

\par manaḥ śukrasya prabhavaṃ ghrāṇaṃ śrotraṃ tathākṣiṇī|

\par sthānaṃ tu sarvāṅgasamasparśāt sparśaḥ pravartate||14.37||

\par yathā niṣiktaṃ kṣīraṃ tu payasād dadhi jāyate|

\par pramathyamānadadhnas tu sarpiso 'pi tathāgamaḥ||14.38||

\par evaṃ śarīra nirgaccet - śukraṃ śukravahā śirāḥ|

\par pūrayitvānupūrveṇa asthayo pratipadyate||14.39||

\par tatas tu tāḥ śukravahā meḍhranābhīm anusṛtāḥ|

\par nāśukraṃ tat tu siñcanti tasmād garbhasya sambhavaḥ||14.40||

\par devy uvāca| 

\par kathaṃ vedayate jāti kathaṃ jātismaro bhavet|

\par etasmin saṃśayaṃ me 'dya chettum arhasi śaṅkara||14.41||

\par bhagavān uvāca| 

\par bhāvitātmāṃ ca yo jantur devi bhogādhikaṃ ca yat|

\par brahmavid jñānasaṃyuktaḥ sa jātiṃ smarate pumān||14.42||

\par devy uvāca| 

\par kathaṃ sadyo gṛhītasya liṅgagarbhasya dṛśyate|

\par etat kathaya deveśa rahaḥ kāle maheśvara||14.43||

\par bhagavān uvāca| 

\par pipāśāromaharṣaṃ ca vepanaṃ gātrasīdanam|

\par nidrāsvedaṃ ca tandrā ca muhūrtam upajāyate||14.44||

\par nikledatvaṃ kharatvaṃ ca yonyāt samupajāyate|

\par na cārdravaṃvai dṛśyeta śukrasya rajaso 'pi vā| 

\par sadyogṛhītagarbhāyā liṅgāny etāni tattvataḥ||

\par devy uvāca| 

\par kena liṅgena vijñeyaṃ putrajanma maheśvara|

\par kanyakā kena liṅgena jñāyate kathayasva me||14.46||

\par bhagavān uvāca| 

\par pādorujaṅghapārśvaś ca dakṣiṇaṃ yadi hy unnataḥ|

\par dakṣiṇaṃ vipulaṃ tatra tadā putraḥ prajāyate||14.47||

\par vāmaś caiva yadā paśyet tadā jāyeta kanyakā|

\par unnataṃ madhyamasthāś ca tadā jāyet - napuṃsakam||14.48||

\par devy uvāca| 

\par puṃsā kapolaromāni khalitaṃ kena jāyate|

\par kathaṃ strīṇāṃ na jāyeta romāṇi khalitaṃ tathā||14.49||

\par bhagavān uvāca| 

\par tathā vṛṣaṇagā jantor yasya retovahā śiraḥ|

\par nibaddhā mastake tālu kapolās tu samāśritāḥ||14.50||

\par taiḥ kapoleṣu romāṇi jāyante antaretasaḥ|

\par khalitaṃ śukradoṣeṇa narāṇām upajāyate||14.51||

\par śirā śukravahā strīṇāṃ na śūnyasyānna jāyate|

\par yātmāpālo ca kās tv agni dṛṣṭimaṇḍalasaṃśritaḥ ?||14.52||

\par śoṇitai soktikoṣṭasthanniśoṣayati tattvataḥ|

\par nibaddhanty akṣipakṣmāṇi tena romāṇi ca bhruvoḥ||14.53||

\par aśukratvāc ca nārīṇāṃ khalitaṃ nopajāyate|

\par chāyāvyapagatasnehā rukṣāgātraśiroruhā|

\par grasatosmābhajaṭharā mṛtagarbhaḥ prajāyate||

\par devy uvāca| 

\par somadhātu kathaṃ jñeyā agnidhātus tatheśvara|

\par pṛthagbhāgaviśeṣeṇa kathayasva maheśvara||14.55||

\par bhagavān uvāca| 

\par śleṣmamedas tathā snāyuḥ asthidantanakhāni ca|

\par striyās tanyaś ca śukraś ca yac ca śvetaṃ tathākṣiṣu||14.56||

\par eteṣāṃ saumyabhāgatvāc chvetatvam upajāyate|

\par āgneyabhāvād raktatvaṃ kṛṣṇatvaṃ cāpi gacchati||14.57||

\par tvagmāṃsarudhiraṃ majjādṛṣṭiroma tathaiva ca|

\par āgneyadhātusomaś ca kathito 'smi varānane|

\par brūhi brūhi viśālākṣi yady asti tava saṃśayaḥ||

<TEXT> \par ||iti vṛṣasārasaṃgrahe praśnavyākaraṇo nāmaś caturdaśo 'dhyāyaḥ||\par

\par*** 15 ***\par
 15 jīvavarṇanam 

\par devy uvāca| 

\par jīvabhūteti yat proktaṃ lakṣaṇaṃ kīdṛśaṃ bhavet|

        \footnote{1a <LEM>lakṣaṇaṃ</LEM> \Ed; lakṣaṇāṅ \msCa}

\par sthānam asya na jānāmi rūpaṃ varṇaṃ ca īśvara||15.1||

\par etat kautūhalaṃ chindhi saṃśayaṃ parameśvara|

\par na cānyad eva paśyāmi jīvanirṇaya kīrtaya||15.2||

\par īśvara uvāca| 

        \footnote{3 <LEM>īśvara</LEM> \msCa; bhagavān \Ed}

\par jīvasya lakṣaṇaṃ devi kathituṃ kena śakyate|

        \footnote{3a <LEM>lakṣaṇaṃ</LEM> \Ed; kathitaṃ \msCa }

\par na rūpavarṇa jīvasya vidyate sthānam eva ca||15.3||

\par vyāpī sarvagataṃ sūkṣmaṃ sarvam āśritya tiṣṭhati|

        \footnote{4a <LEM>vyāpī</LEM> \Ed; \rmapp{vyāp\uncl{i}}\dnapp{vyā\uncl{i}pa} \msCa }

        \footnote{4a <LEM>āśritya</LEM> \corr; āśṛtya \msCa, āvṛtya \Ed}

\par nirālambam anādhāram anaupamyaṃ nirañjanam||15.4||

\par araṇistho yathā vahniḥ kāṣṭheṣu nopalabhyate|

\par tadvaj jīvaṃ na paśyeta śarīrastho 'pi sundari||15.5||

        \footnote{5c <LEM>jīvaṃ</LEM> \Ed; jīvon \msCa}

\par dadhivac ca yathā sarpir dṛśyate na ca dṛśyate|

\par tadvaj jīvaḥ śarīrastho dṛśyate na ca dṛśyate||15.6||

        \footnote{6c <LEM>jīvaḥ</LEM> \corr; jīvaś \msCa, jīva \Ed}

\par devy uvāca| 

\par adṛṣṭapratyayo hy asti nāsti pratyayadarśanam|

\par vyāpī kathaṃ mahādeva sarvatrāvasthitaḥ katham||15.7||

\par maheśvara uvāca| 

        \footnote{8 <LEM>maheśvara</LEM> \msCa; bhagavān \Ed}

\par asaṃśayo mahādevi vyāpī sarvagataḥ śivaḥ|

\par dṛśyetendriyasaṃyogāj jīvapratyayadarśanam||15.8||

        \footnote{8c <LEM>dṛśyete°</LEM> \msCa; dṛśyante \Ed}

\par yathākāśasthito vāyuḥ śabdasparśaguṇānvitaḥ|

        \footnote{9cd <LEM>vāyuḥ śabda°</LEM> \Ed; vāyu\uncl{śśa}* \msCa}

\par tadvad dehī vijānīyād guṇaveṣṭena nānyathā||15.9||

\par devy uvāca| 

\par vyāpīti kathitaḥ pūrvaṃ jīvaḥ sarvagato 'pi ca|

\par taṃ vṛthā kathito 'smy adya mriyate kena hetunā||15.10||

\par īśvara uvāca| 

        \footnote{11 <LEM>īśvara</LEM> \msCa; bhagavān \Ed}

\par na jīvo mriyate devi sarveṣāṃ surasundari|

\par ghaṭāntastho yathākāśo bahirākāśavad yathā||15.11||

\par ghaṭabhinne viśālākṣi viśeṣo nopalakṣyate|

\par dehabhinne tathā devi vināśo nopalabhyate||15.12||

        \footnote{12c <LEM>devi</LEM> \msCa; dehī \Ed}

\par susūkṣmaḥ sarvago vyāpī paramātmānam avyayaḥ|

        \footnote{13a <LEM>susūkṣmaḥ</LEM> \msCa; sa sūkṣmaḥ \Ed}

\par bahir antaś ca bhūtānām acaraś cara eva sa||15.13||

        \footnote{13d <LEM>acaraś</LEM> \msCa; acaran \Ed}

\par aprameyo 'vināśī ca aprapañcaḥ prapañcakaḥ|

\par sarvendriyaguṇābhāsaḥ sarvendriyavivarjitaḥ||15.14||

\par evam eṣa mahādevi jīvasya varavarṇini|

\par kathito 'smi samāsena kim anyac chrotum icchasi||15.15||

        \footnote{15d <LEM>icchasi</LEM> \Ed; icchati \msCa}

 sāraśreṣṭham 

\par devy uvāca| 

\par sāraśreṣṭhaṃ mahādeva kathayeśāna īśvara|

        \footnote{16a <LEM>sāraśreṣṭhaṃ</LEM> \Ed; sāraśreṣṭha \msCa}  

\par śrotum icchāmi deveśa mānuṣāṇāṃ hitaṃ vada||15.16||

        \footnote{16d <LEM>vada</LEM> \msCa; vadaḥ \Ed}

\par īśvara uvāca| 

        \footnote{17 <LEM>īśvara</LEM> \msCa; bhagavān \Ed}

\par āśramāṇāṃ gṛhī śreṣṭho varṇaśreṣṭho dvijātayaḥ|

        \footnote{17a <LEM>gṛhī</LEM> \Ed; 

        \rmapp{gṛh\uncl{ī}}\dnapp{gṛha\uncl{\csI}} \msCa}

        \footnote{17b <LEM>°śreṣṭhā</LEM> \msCa; °śreṣṭo \Ed}

\par aśvamedhaḥ kratuśreṣṭho japaśreṣṭho 'ghamarṣaṇaḥ||15.17||

        \footnote{17d <LEM>japa°</LEM> \msCapcorr\Ed; ja° \msCaacorr\oo

                 <LEM>'ghamarṣaṇaḥ</LEM> \Ed; rghamarṣaṇaḥ \msCa}

\par devatānāṃ hariḥ śreṣṭhaḥ śreṣṭhā gaṅgā nadīṣu ca|

\par anāśanas tapaḥśreṣṭhas tīrthaśreṣṭhaḥ surahradaḥ||15.18||

\par kṣaumaṃ vastreṣu ca śreṣṭhaṃ yaśaḥ śreṣṭhaṃ vibhūṣaṇam|

\par bhārataṃ śrutiṣu śreṣṭhaṃ vrataśreṣṭho dayāparaḥ||15.19||

        \footnote{19d <LEM>dayāparaḥ</LEM> \Ed; \uncl{dayāpa}raḥ \msCa}

\par dāneṣu cābhayaṃ śreṣṭhaṃ manaḥ śreṣṭhendriyeṣu ca|

\par vidyā saṃgrahaṣu ! śreṣṭhā satyaṃ śreṣṭhaṃ vacassu (ḥsu) ca||15.20||

        \footnote{20c <LEM>śreṣṭā</LEM> \msCa; śreṣṭho \Ed} 

\par āyudhānāṃ dhanuḥ śreṣṭhaṃ bāndhaveṣu ca mātaraḥ|

\par jñānam auṣadhiṣu śreṣṭhaṃ vaidyaśreṣṭhaḥ śivākṣaraḥ||15.21||

        \footnote{21d <LEM>vaidya°</LEM> \msCa; vaidyo \Ed\oo

                 <LEM>°śreṣṭhaḥ</LEM> \Ed; °śreṣṭha \msCa}

\par akāraś cākṣaraḥ śreṣṭho dharmaśreṣṭho hy ahiṃsakaḥ|

\par paśuṣu saurabhī śreṣṭhā nareṣu ca narādhipaḥ||15.22||

\par māsi mārgaśiraḥ śreṣṭhaṃ kṛtaḥ śreṣṭhaś caturyuge|

        \footnote{23a <LEM>māsi</LEM> \msCa; māsī \Ed}

\par vasanta ṛtuṣu śreṣṭhaḥ śreṣṭhaṃ cāyanam uttaram||15.23||

\par amāvāsyā dinaśreṣṭhā vasuśreṣṭho hutāśanaḥ|

        \footnote{24b <LEM>grahaśreṣṭho divākaraḥ</LEM> \msCa;

                        vasuśreṣṭho hutāśanaḥ \Ed}

\par strīṣu lakṣmīrpṛtiḥ śreṣṭhā vasuśreṣṭho hutāśanaḥ||15.24||

        \footnote{24cd \om\ \Ed}

\par ṛṣiṣu uṣaṇaḥ śreṣṭhaḥ kāntiśreṣṭho niśākaraḥ|

        \footnote{25b <LEM>kānti°</LEM> \Ed; kā* \msCa}

\par nakṣatreṣv abhijit śreṣṭho kālaḥ śreṣṭhaḥ kaleṣu ca ||15.25||

        \footnote{25c <LEM>\rmapp{abhijit}\dnapp{°bhijit śre°}</LEM> \Ed;

                \rmapp{abhijiś}\dnapp{°bhijiś śre°} \msCa}

        \footnote{25d <LEM>kālaḥ</LEM> \msCa; kaliḥ \Ed}

\par vedeṣu ca varaṃ sāma sthāvareṣu himālayaḥ|

\par aśvattho vara vṛkṣeṣu bhūteṣu vara cetanaḥ||15.26||

        \footnote{26c <LEM>vara</LEM> \Ed; vaṭa \msCa}

        \footnote{26d <LEM>vara cetanaḥ</LEM> \Ed; varaś cetanaḥ \msCa\unmetr}

\par adhyātma vara vidyāsu vācaḥ satya vara smṛtaḥ|

        \footnote{27b <LEM>vācaḥ</LEM> \Ed; ??? \msCa}

\par prahlādo vara daityeṣu yakṣarakṣo dhaneśvaraḥ||15.27||

\par marīci vara vāteṣu hariḥ śreṣṭho mṛgeṣu ca|

        \footnote{28a <LEM>marīci vara</LEM> \Ed; ma**** \msCa}

\par sādhya nārāyaṇaḥ śreṣṭhaḥ pitṝṇāṃ ca pitāmahaḥ||15.28||

\par etat samāsato devi kathito 'si varānane|

        \footnote{29b <LEM>'si</LEM> \msCa; 'smi \Ed}

\par sarvasāraṃ samuddhṛtya kiṃ bhūyaḥ kathayāmy aham||15.29||

        \footnote{29d <LEM>kiṃ</LEM> \Ed; ki \msCa}

<TEXT> \par ||iti vṛṣasārasaṃgrahe jīvanirṇayo nāmādhyāyaḥ pañcadaśamaḥ||\par

\par*** 16 ***\par
 ṣoḍaśamo 'dhyāyaḥ 

 yogasadbhāvanirṇayaḥ 

\par devy uvāca| 

\par adhunā śrotum icchāmi yogasadbhāvanirṇayam|

        \footnote{1 Ł  \msCa\ 435.jpg line 2; \msCb\ 448.jpg line 2;

                      \msNa\ 220.jpg lower image line 5.

                      This chapter is missing in \msCc.$ </PARAL>

        \footnote{1b <LEM>°nirṇayam</LEM> \msCa\msCb\msNa; °nirṇayaḥ \Ed}

\par karaṇaṃ ca yathānyāyaṃ kathayasva sureśvara||16.1||

