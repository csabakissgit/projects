\par*** 12 ***\par
 dvādaśamo 'dhyāyaḥ  

 ātithyadharmaḥ  

\par devy uvāca|

        \footnote{1 <LEM>devy uvāca</LEM> \msCa\msCb\Ed; \om\ \msBod}

\par ahiṃsā paramo dharmaḥ satataṃ parikīrtyate|

\par ātithyakānāṃ dharmaṃ ca kathayasva yad uttamam||

        \footnote{1c <LEM>ātithya°</LEM> \msCa\Ed; atithya° \msCb}

\par maheśvara uvāca| 

\par ahiṃsātithyakānāṃ ca śṛṇu dharmaṃ yad uttamam|

        \footnote{2b <LEM>śṛṇu</LEM> \msCb\Ed; ×ṇu \msCa\oo

                 <LEM>dharmaṃ</LEM> \msCa\msCb; dharma \Ed\oo

                 <LEM>°ttamam</LEM> \msCa\msCb; °ttamāṃ \Ed}

\par trailokyam akhilaṃ devi ratnapūrṇaṃ sulocane||12.2||

        \footnote{2d <LEM>°pūrṇaṃ</LEM> \msCa\msCb; °pūrṇāṃ \Ed\oo

                 <LEM>°locane</LEM> \msCa\Ed; °locanaṃ \msCb}

\par caturvedavide dānaṃ na tattulyam ahiṃsakaḥ|

        \footnote{3a <LEM>dānaṃ</LEM> \msCa\Ed; nānaṃ \msCb}

\par śṛṇu dharmam atithyānāṃ kīrtayiṣyāmi sundari||12.3||

 vipulopākhyānam 

\par āsīd vṛttaṃ purākhyānaṃ nagare kusumāhvaye|

        \footnote{4a <LEM>āsīd vṛttaṃ</LEM> \msCa\Ed; āśīdattaṃ \msCb\oo 

                 <LEM>°khyānaṃ</LEM> \msCa\msCb; °khyātaṃ \Ed}

\par kapilasya suto vidvān vipulo nāma viśrutaḥ||12.4||

\par dharmanityo jitakrodhaḥ satyavādī jitendriyaḥ|

        \footnote{5b Ł = MBh 12.218.13b $</PARAL>

\par brahmaṇyaś ca kṛtajñaś ca madbhaktaḥ kṛtaniścayaḥ||12.5||

        \footnote{5c <LEM>brahmaṇya°</LEM> \msCb\Ed; brāhmaṇya° \msCa\oo

                 <LEM>°jñaś ca</LEM> \msCa\Ed; °jña \msCb\

             5d <LEM>°bhaktaḥ</LEM> \msCa\msCb; °bhakta° \Ed}

\par dhanāḍhyo 'tithipūjyaś ca dātā dānto dayālukaḥ|

        \footnote{6a <LEM>°pūjyaś ca</LEM> \msCa\Ed; °pūjya \msCb\

             6b <LEM>dānto</LEM> \msCbacorr\Ed; dānta \msCa, dāntomŁ(?)$ \msCbpcorr}

\par nyāyārjitadhano nityam anyāyaparivarjitaḥ||12.6||

        \footnote{6c <LEM>nyāyā°</LEM> \Ed; nyāyo° \msCa\msCb}

\par bhāryā ca rūpiṇī tasya candrabimbaśubhānanā|

\par pīnottuṅgastanī kāntā sakalānandakāriṇī|

        \footnote{7d <LEM>sakalā°</LEM> \msCb\Ed; ××× \msCa}

\par pativratā patiratā patiśuśrūṣaṇe ratā||

        \footnote{7e <LEM>pativratā</LEM> \msCa\Ed; prativratā \msCb}

\par atha kenāpi kālena sūryarāgam abhūt tataḥ|

\par grastabhāgatrayas tv āsīt kṛṣṇamādhavamāsike||12.8||

\par snātukāmāvatīryante sarve pauranṛpādayaḥ|

        \footnote{9a <LEM>°vatīryante</LEM> \msCa\msCb; ca tīrthante \Ed}

\par devāś ca pitaraś caiva tarpyante vidhivat tathā||12.9||

        \footnote{9d <LEM>tarpyante</LEM> \msCa\Ed; tapyante \msCb}

\par kecij juhvati tatrāgniṃ kecid viprāṃś ca tarpayet|

        \footnote{10a <LEM>°cij juhvati</LEM> \msCa\Ed; °cij juti \msCb\

             10b <LEM>viprāṃś ca</LEM> \msCa\Ed; viprāś ca \msCb}

