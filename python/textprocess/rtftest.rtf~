        \footnote{56d <LEM>°vāritam</LEM> \mssCaCbCc\msNa; °vāritaḥ \Ed}

\par śaṅkubhiḥ pṛthag ekaikaṃ padmena parivāritam|

        \footnote{57a <LEM>pṛthag ekaikaṃ</LEM> \eme; pṛthag enaiva \msCa\msCc\msNa\Ed, pṛthag ainaiva \msCb}

        \footnote{57b <LEM>°vāritam</LEM> \msNapcorr; °vāritaḥ \mssCaCbCc\Ed, °taṃ \msNaacorr}

\par padmavargeṣu ekaikaṃ samudraiḥ parivāritam||1.57||

        \footnote{57d <LEM>samudraiḥ</LEM> \msCc\msNa\Ed; samudaiḥ \msCa, damu<UNCL>daiḥ</UNCL> \msCb\oo

                 <LEM>°vāritam</LEM> \mssCaCbCc\msNa; °vāritaḥ \Ed}

\par samudreṣu tathaikaikaṃ madhyasaṃkhyais tu tair vṛtam|

        \footnote{58a <LEM>tathai°</LEM> \msCa\msCb\msNa\Ed; tathe° \msCc}

        \footnote{58b <LEM>madhyasaṃkhyais tu tair vṛtam</LEM> \mssCaCbCc\msNa;

                        madhye śaṅkhyāyutair vṛtaḥ \Ed}

