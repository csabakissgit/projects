        \footnote{60a <LEM>°kāhala°</LEM> \Ed; °kātāla° \msCa}

\par tvacayā gṛhyate sparśaḥ sukhaduḥkhasamanvitaḥ||20.60||

        \footnote{60c <LEM>gṛhyate</LEM> \Ed; gṛhya× \msCa}

