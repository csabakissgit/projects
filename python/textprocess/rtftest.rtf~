        \footnote{11d <LEM>rājanā°</LEM> \msCa\msCb; rājānā° \Ed}

\par vipulo 'pi ca tatraiva gaṅgāgaṇḍakisaṃgame|

        \footnote{12a <LEM>'pi ca</LEM> \msCa\Ed; 'pi \msCb}

\par bhāryayā saha tatraiva snātvā kṣomavibhūṣaṇaḥ||12.12||

        \footnote{12c <LEM>bhāryayā</LEM> \msCapcorr\msCb; bhāryāyā \msCaacorr\Ed}

\par devatāguruviprāṇām anyeṣāṃ tarpaṇe rataḥ|

        \footnote{13a <LEM>°viprā°</LEM> \msCb\Ed; °vi× \msCa}

        \footnote{13b <LEM>tarpaṇe</LEM> \msCa\msCb; tarpaṇā \Ed}

\par tatrāvasarasamprāpto brāhmaṇo 'tithir āgataḥ||12.13||

\par bhāryā tasyātirūpeṇa mohitā brahmaṇas tadā|

        \footnote{14b <LEM>mohitā</LEM> \msCa\Ed; mohito \msCb\oo

                 <LEM>brahmaṇas tadā</LEM> \msCa\msCb; brāhmaṇasya ca \Ed}

