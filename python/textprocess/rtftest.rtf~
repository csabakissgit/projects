        \footnote{58c <LEM>madhyasaṃkhyeṣu</LEM> \mssCaCbCc\msNa; madhye śaṃkheṣu \Ed}

        \footnote{58d <LEM>°vāritam</LEM> \mssCaCbCc\msNa; °vāritaḥ \Ed}

\par ananteṣu ca ekaikaṃ parārdhaparivāritam|

        \footnote{59b <LEM>parārdhaparivāritam</LEM> \msCa\msCb\msNa; parārdha×××ritam \msCc,

                                                            parārdhaiḥ parivāritaḥ \Ed}

\par parārdheṣu ca ekaikaṃ pareṇa parivāritam|

        \footnote{59d <LEM>°vāritam</LEM> \mssCaCbCc\msNa; °vāritaḥ \Ed}

\par eṣa vai kathito vipra śakyaṃ sāṃkhyam udīritam||

        \footnote{59e <LEM>kathito</LEM> \mssCaCbCc\msNa; kathitā \Ed}

        \footnote{59f <LEM>śakyaṃ</LEM> \msCa\msCb\msNa\Ed; śakya \msCc\oo

